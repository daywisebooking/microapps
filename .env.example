# Micro Apps Hub - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env or .env.local files to git

# ============================================
# REQUIRED - InstantDB Configuration
# ============================================
# Get these from your InstantDB dashboard: https://instantdb.com/dash
NEXT_PUBLIC_INSTANT_APP_ID=your_app_id_here
INSTANT_ADMIN_TOKEN=your_admin_token_here

# ============================================
# REQUIRED - Admin Configuration
# ============================================
# Comma-separated list of admin email addresses
# These users will have access to the /admin dashboard
ADMIN_EMAILS=your@email.com,another-admin@email.com

# ============================================
# OPTIONAL - Rate Limiting (Upstash Redis)
# ============================================
# If not set, the app will use in-memory rate limiting (suitable for development)
# For production, set up Upstash Redis: https://upstash.com/
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ============================================
# OPTIONAL - Content Moderation
# ============================================
MODERATION_ENABLED=true
MODERATION_STRICT_MODE=false
PROFANITY_FILTER_ENABLED=true
AUTO_SANITIZE_PROFANITY=false
MAX_LINKS_PER_COMMENT=2
ALLOW_URL_SHORTENERS=false
DUPLICATE_CHECK_WINDOW_MINUTES=5
DUPLICATE_SIMILARITY_THRESHOLD=0.9
SPAM_SCORE_THRESHOLD=70
MAX_REPEATED_CHARS=5
MAX_CAPS_RATIO=0.5
MAX_PUNCTUATION_RATIO=0.2
